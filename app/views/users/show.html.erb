<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <strong>Name: </strong> <%= @user.name %>
      </h1>
      <h1>
        <strong>About: </strong>
        <%= @user.bio %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @user.favours.any? %>
        <h3>My Favours (<%= @user.favours.count %>)</h3>
        <ul class="favours">
          <%= render @favours %>
        </ul>
    <% end %>
  </div>
</div>