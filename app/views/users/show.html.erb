<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @user.favours.any? %>
        <h3>Microposts (<%= @user.favours.count %>)</h3>
        <ol class="microposts">
          <%= render @favours %>
        </ol>
        <%= will_paginate @favours %>
    <% end %>
  </div>
</div>