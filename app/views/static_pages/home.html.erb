<% provide(:title, 'Home') %>
<% if logged_in? %>
    <div class="row">
      <aside class="col-md-4">
        <h1>Your Homepage</h1>
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <h3>Need something?</h3>
        <section class="favour_form">
          <%= render 'shared/favour_form' %>
        </section>
      </aside>
    </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Helping Hand</h1>

    <h2>
      This is the home page for my first attempt at the Helping Hand application.
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>

    <h2>Already a user? <%= link_to "Log in now!", login_path %></h2>
  </div>
<% end %>