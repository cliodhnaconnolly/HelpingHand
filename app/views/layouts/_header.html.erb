<header class="navbar navbar-fixed-top navbar-inverse">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <div class="container">
    <%= link_to "helping hand", root_path, id: "logo" %>
    <nav>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarHelpingHand">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <div class = "navbar-collapse collapse" id="navbarHelpingHand">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Home",    root_path %></li>
          <% if logged_in? %>
              <li><%= link_to "Create a New Favour", favours_new_path %></li>
              <li><%= link_to "View All Favours", favours_path %></li>
              <li><%= link_to "Inbox",    inbox_path %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "View My Profile", current_user %></li>
                  <li><%= link_to "Edit My Profile", edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Log out", logout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to "Log in", login_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>